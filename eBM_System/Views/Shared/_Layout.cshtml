@inject Microsoft.AspNetCore.Identity.UserManager<eBM_System.Models.DB_Models.UserAccount> userManager;

@{
    var u = await userManager.GetUserAsync(User);
    var role = await userManager.GetRolesAsync(u);
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>eBMS </title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/assets/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/assets/vendors/typicons/typicons.css">
    <link rel="stylesheet" href="~/assets/vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/assets/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/assets/images/eBMS_logo_1.png" />
</head>
<body>
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <nav class="navbar default-layout col-lg-12 col-12 p-0 fixed-top d-flex align-items-top flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-start">
                <div class="me-3">
                    <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-bs-toggle="minimize">
                        <span class="icon-menu"></span>
                    </button>
                </div>
                <div>
                    <a class="navbar-brand brand-logo" href="../Home/Index">
                        <img src="~/assets/images/eBMS_logo_1.png" alt="logo" />
                    </a>
                    <a class="navbar-brand brand-logo-mini" href="../Home/Index">
                        <img src="~/assets/images/eBMS_logo_1.png" alt="logo" />
                    </a>
                </div>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-top">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown d-none d-lg-block user-dropdown">
                        <a class="" mb-1 mt-3 font-weight-semibold" href="../Account/EditCustomer?email=@User.Identity.Name"><i class="dropdown-item-icon icon-md mdi mdi-account-circle  text-primary me-2"></i>@User.Identity.Name</a>
                        <a class="" mb-1 mt-3 font-weight-semibold" href="../Account/Logout"><i class="dropdown-item-icon icon-md mdi mdi-power text-primary me-2"></i>Sign Out</a>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-bs-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial -->
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    @if (role[0] == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="~/Account/AllUsers">
                                <i class="icon-md mdi mdi-account-multiple"></i>
                                <span class="menu-title">All Customers</span>
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="~/Transaction/Index   ">
                            <i class="icon-md mdi mdi-buffer"></i>
                            <span class="menu-title">Account Info</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Transaction/TransactionHistory">
                            <i class="icon-md mdi mdi-archive"></i>
                            <span class="menu-title">Transaction History</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>
                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Copyright © @DateTime.Now.Year. All rights reserved.</span>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


    <!-- plugins:js -->
    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/assets/vendors/progressbar.js/progressbar.min.js"></script>

    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/assets/js/off-canvas.js"></script>
    <script src="~/assets/js/hoverable-collapse.js"></script>
    <script src="~/assets/js/template.js"></script>
    <script src="~/assets/js/settings.js"></script>
    <script src="~/assets/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/assets/js/dashboard.js"></script>
    <script src="~/assets/js/Chart.roundedBarCharts.js"></script>



    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
