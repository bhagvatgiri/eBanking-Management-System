@model eBM_System.Models.ViewModels.Login_VM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>eBMS</title>
    <link rel="stylesheet" href="~/assets/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/assets/vendors/typicons/typicons.css">
    <link rel="stylesheet" href="~/assets/vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/assets/css/vertical-layout-light/style.css">
    <link rel="shortcut icon" href="~/assets/images/eBMS_logo_1.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="text-center" >
                        <img src="~/assets/images/eBMS_logo_1.png" alt="logo" height="200">
                    </div>
                    <div class="col-lg-4 mx-auto" style="margin-top:20px">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <h2 class="text-center">Sign In</h2>
                            <form enctype="multipart/form-data" asp-action="Login" asp-controller="Account" method="post" class="pt-3">
                                <div asp-validation-summary="All" class="text-danger">
                                    <div class="form-group">
                                        <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="Username">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
                                        SIGN IN
                                    </button>
                                    <button type="button" onclick="alert('For Registering new user please email admin with your email id to this email address: jackshor01@gmail.com .Thank you.')" class="btn btn-block btn-dark btn-lg font-weight-medium auth-form-btn">
                                        Sign up
                                    </button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/assets/js/off-canvas.js"></script>
    <script src="~/assets/js/hoverable-collapse.js"></script>
    <script src="~/assets/js/template.js"></script>
    <script src="~/assets/js/settings.js"></script>
    <script src="~/assets/js/todolist.js"></script>
</body>

</html>
